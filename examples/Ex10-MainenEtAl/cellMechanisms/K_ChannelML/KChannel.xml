<?xml version="1.0" encoding="UTF-8"?>
<channelml xmlns="http://morphml.org/channelml/schema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://morphml.org/channelml/schema  ../../../../templates/xmlTemplates/Schemata/v1.3/Level2/ChannelML_v1.3.xsd"
    xmlns:meta="http://morphml.org/metadata/schema"
    units="Physiological Units">

    <meta:notes>ChannelML file containing a single Channel description, based on the model described in: Mainen et al. 1995</meta:notes>

    <ion name="k" default_erev="-90.0" charge="1"/>

    <channel_type name="K_ChannelML" density="yes">

		<meta:notes>Noninactivating K channel as used in Mainen et al. 1995</meta:notes>

		<meta:publication>
			<meta:fullTitle>Mainen ZF, Joerges J, Huguenard JR, Sejnowski TJ (1995) A model of spike initiation in
				neocortical pyramidal neurons. Neuron 15:1427-39</meta:fullTitle>
			<meta:pubmedRef>http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?db=pubmed&amp;cmd=Retrieve&amp;dopt=AbstractPlus&amp;list_uids=8845165</meta:pubmedRef>
        </meta:publication>

        <current_voltage_relation>
            <ohmic ion="k">
				<conductance default_gmax="10">
                    <rate_adjustments>
                        <q10_settings q10_factor="3" experimental_temp="16"/>
                    </rate_adjustments>
                    <gate power="1">
                        <state name="n" fraction="1"/>

                    </gate>
                </conductance>
            </ohmic>
        </current_voltage_relation>


        <hh_gate state="n">
            <transition>
                <voltage_gate>
                    <alpha>
                        <parameterised_hh type="linoid" expr="A*(k*v-d)/(1 - exp(-(k*v-d)))">
                            <parameter name="A" value="0.18"/>
                            <parameter name="k" value="0.1111111111"/>
                            <parameter name="d" value="20"/>
                        </parameterised_hh>
                    </alpha>
                    <beta>
                        <parameterised_hh type="linoid" expr="A*(k*v-d)/(1 - exp(-(k*v-d)))">
                            <parameter name="A" value="0.018"/>
                            <parameter name="k" value="-0.1111111111"/>
                            <parameter name="d" value="20"/>
                        </parameterised_hh>
                    </beta>
                </voltage_gate>
            </transition>
        </hh_gate>

    </channel_type>
</channelml>