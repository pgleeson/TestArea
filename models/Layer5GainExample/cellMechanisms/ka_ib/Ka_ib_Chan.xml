<?xml version="1.0" encoding="UTF-8"?>
<channelml xmlns="http://morphml.org/channelml/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:meta="http://morphml.org/metadata/schema" xsi:schemaLocation="http://morphml.org/channelml/schema  ../../Schemata/v1.6/Level2/ChannelML_v1.6.xsd" units="Physiological Units">

    <meta:notes>ChannelML file based on Traub et al. 2003</meta:notes>

    <ion name="k" charge="1" default_erev="-95"/>   


    <channel_type name="ka_ib" density="yes">
        
        <status value="in_progress">
            <meta:comment>Includes 2.6 as in TM's comment...</meta:comment>
            <meta:contributor>
                <meta:name>Padraig Gleeson</meta:name>
            </meta:contributor>
        </status>
        
       
   

        <current_voltage_relation>
            <ohmic ion="k">
                <conductance default_gmax="30">                                 <!-- phys units: mS/cm2 -->

                    <gate power="4">
                        <state name="m" fraction="1"/>
                    </gate>
                    
		            <gate power="1">
                        <state name="h" fraction="1"/>
                    </gate>
                    
                </conductance>
            </ohmic>
        </current_voltage_relation>
        
        
        <hh_gate state="m">
            <transition>
                <voltage_gate>

                    <initialisation value="0"/> <!-- An incorrect initialisation value for this state variable, in order to match orig mod!!-->

                    <tau>  <!-- Note, extra brackets required to allow use of equation on GENESIS...-->
                    
                        <!--  orig: mtau = 0.185 + 0.5 / ( exp( ( v + 35.8 ) / 19.7 ) + exp( ( - v - 79.7 ) / 12.7 ) )-->
                    
                        <generic_equation_hh expr="0.185 + 0.5 / ((exp (( v + 35.8 )/19.7)) + (exp ((-v - 79.7)/12.7)))"/>
                    </tau>
                    <inf>
                        <!--  orig: minf  = 1 / ( 1 + exp( ( - v - 60 ) / 8.5 ) )-->
                        
                        <parameterised_hh type="sigmoid">  <!-- Form of equation: A / (1 + exp(k*(v-d))) -->
                            <parameter name="A" value="1"/>
                            <parameter name="k" value="-0.11764706"/>
                            <parameter name="d" value="-60"/>
                        </parameterised_hh>
                    </inf>
                </voltage_gate>
            </transition>
        </hh_gate>
        
        
        <hh_gate state="h">
	            <transition>
	                <voltage_gate>
	                    <tau>  <!-- Note, extra brackets required to allow use of equation on GENESIS...-->
                            
                            <!--  orig: if( v <= -63 ) {
                                            htau = 0.5 / ( exp( ( v + 46 ) / 5 ) + exp( ( - v - 238 ) / 37.5 ) )
                                            }else{
                                                htau = 9.5
                                            }-->
                            
                            <generic_equation_hh expr="v &lt; -63.0 ? 2.6 * 0.5 / ((exp (( v + 46 )/5)) + (exp (( -v - 238 )/37.5))) : 2.6 * 9.5"/>
	                    </tau>
	                    <inf>
                        
                            <!--  orig: hinf  = 1 / ( 1 + exp( ( v + 78 ) / 6 ) )-->
                        
	                        <parameterised_hh type="sigmoid">  <!-- Form of equation: A / (1 + exp(k*(v-d))) -->
	                            <parameter name="A" value="1"/>
	                            <parameter name="k" value="0.16666667"/>
	                            <parameter name="d" value="-78"/>
	                        </parameterised_hh>
	                    </inf>
	                </voltage_gate>
	            </transition>
        </hh_gate>

        <impl_prefs>
            <comment>Using the NEURON mod file impl settings to get a closer match</comment>
            <table_settings max_v="40" min_v="-120" table_divisions="641"/>
        </impl_prefs>
        
    </channel_type>
</channelml>
